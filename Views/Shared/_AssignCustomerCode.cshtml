            </div>
            <div class="col-md-6">
                @Html.DropDownList("PriceList", "select--")
            </div>
        </div>        
    </div>
</div>
<div class="row form-group">
    <div class="col-md-6">
        <div class="row form-group">
            <div class="col-md-6">
                Customer Code
            </div>
            <div class="col-md-6">
                <input type="text" id="customerCode" />
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row form-group">
            <div class="col-md-6">
                Vendor MFG Name
            </div>
            <div class="col-md-6">
                <input type="text" id="VendorMFG" />
            </div>
        </div>
    </div>
</div>
    

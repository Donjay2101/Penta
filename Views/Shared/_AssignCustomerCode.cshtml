
<div class="row form-group">
    <h3 class="signcode">
        Assign Codes To customer   
    </h3>
    <span id="close" style="cursor:pointer" data-toggle="tooltip" data-placement="right" title="Close">X</span>
</div>
<div class="row form-group" id="editModel" style="display:none" >
    <div class="col-md-6" style="color:red">
        <span>row which contains user <span id="username"></span> is in edit mode.</span>
        <span id="closeEdit">X</span>
    </div>
</div>
<div class="row form-group">
    <div class="col-md-6">
        <div class="row form-group">
            <div class="col-md-6">
                Pending user
            </div>
            <div class="col-md-6">
                @Html.DropDownList("UserID", "select--")
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row form-group">
            <div class="col-md-6">


@model IEnumerable<DAH.Models.NPIEmblemOrder>

@using GridMvc.Html


@Html.Grid(Model).Columns(columns =>
                    {


                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
                @<div id="balloon" class="balloonClass">
                    <b>
                        @Html.ActionLink("Edit", "Edit", "Orders", new { id = c.ID }, new { @class = "modal_link" })
                    </b>
                </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                    @<div id="balloon" class="balloonClass">
                                        <b>
                                            <a href="#" onclick="deleteConfirm('@c.ID','','Orders')">Delete</a>
                                            @*@Html.ActionLink("Delete", "Delete", new { id = c.ID }, new { @class = "modal_link" })*@
                                        </b>
                                    </div>);                       
                        columns.Add(c => c.CustomerCode).Titled("Customer Code").Filterable(true);
                        // columns.Add(c => c.Description).Titled("Description");
                        columns.Add(c => c.RequestDate).Titled("Request Date");
                        columns.Add(c => c.OrderedBy).Titled("Ordered By");

                    }).WithPaging(10).Sortable().Filterable().WithMultipleFilters()


